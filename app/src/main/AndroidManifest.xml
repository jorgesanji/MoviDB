<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.movies">

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.test.movies.ui.application.SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.test.movies.ui.view.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BrandedLaunch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.test.movies.ui.view.home.HomeActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/BrandedLaunch"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.test.movies.ui.view.detail.DetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BrandedLaunch"
            android:windowSoftInputMode="stateHidden" />

    </application>

</manifest>